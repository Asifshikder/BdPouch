@model CompanyViewModel
@{
    ViewData["Title"] = "Edit";
}
<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Home/Index">Home</a></li>
                <li class="breadcrumb-item"><a href="/Admin/Company/Index">Company</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
            <div>
                <a asp-action="Index" class="btn btn-sm btn-theme"><i class="fa fa-arrow-left"></i>Back to List</a>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="d-flex w-100">
                    <div class="">
                        <span class="card-title"> <i class="fas fa-list"></i> Update company</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="CompanyName" class="control-label"></label>
                                <input asp-for="CompanyName" class="form-control form-theme" required />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CompanyBrandName" class="control-label"></label>
                                <input asp-for="CompanyBrandName" class="form-control form-theme" required></input>
                                <span asp-validation-for="CompanyBrandName" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="CompanyLogoFile" class="control-label"></label>
                                <input asp-for="CompanyLogoFile" class="form-control form-theme dropify"  data-default-file="@Url.Content(Model.CompanyLogo)"/>
                                <span asp-validation-for="CompanyLogoFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ShortDescription" class="control-label"></label>
                                <textarea asp-for="ShortDescription" class="form-control form-theme" required></textarea>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OfficeAddress" class="control-label"></label>
                                <input asp-for="OfficeAddress" class="form-control form-theme" required />
                                <span asp-validation-for="OfficeAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control form-theme" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control form-theme" required />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FactoryAddressDetails" class="control-label"></label>
                                <input asp-for="FactoryAddressDetails" class="form-control form-theme" required />
                                <span asp-validation-for="FactoryAddressDetails" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Website" class="control-label"></label>
                                <input asp-for="Website" class="form-control form-theme" required />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FacebookUrl" class="control-label"></label>
                                <input asp-for="FacebookUrl" class="form-control form-theme" required />
                                <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                            </div>
                            @Html.HiddenFor(s=>s.Id)
                            @Html.HiddenFor(s=>s.CompanyLogo)
                            <div class="form-group float-right">
                                <a asp-action="Index" class="btn btn-sm btn-cancel">Cancel</a>
                                <input type="submit" value="Update" class="btn btn-sm btn-update" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("#seoitem").addClass('active');
            $("#seoitem").addClass('active');
        });
    </script>
}