@model Company
@{
    ViewData["Title"] = "Details";
}
<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Home/Index">Home</a></li>
                <li class="breadcrumb-item"><a href="/Admin/Company/Index">Company</a></li>
                <li class="breadcrumb-item active">Details</li>
            </ol>
            <div>
                <a asp-action="Index" class="btn btn-sm btn-theme"><i class="fa fa-arrow-left"></i>Back to Home</a>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="d-flex w-100">
                    <div class="">
                        <span class="card-title"><i class="fas fa-list"></i> Details Of @Model.CompanyName</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div>

                    <h4 class="text-themecolor">@Model.CompanyName</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CompanyName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CompanyName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CompanyBrandName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CompanyBrandName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CompanyLogo)
                        </dt>
                        <dd class="col-sm-10">
                            @if (!string.IsNullOrEmpty(Model.CompanyLogo))
                            {
                                <img src="@Url.Content(Model.CompanyLogo)" height="100" />
                            }
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ShortDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model=>model.ShortDescription)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model=>model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model=>model.PhoneNumber)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OfficeAddress)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model=>model.OfficeAddress)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FactoryAddressDetails)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model=>model.FactoryAddressDetails)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FacebookUrl)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model=>model.FacebookUrl)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Website)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model=>model.Website)
                        </dd>

                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
<script>
    $(document).ready(function () {
        $("#productnav").addClass('menu-open');
        $("#productitem").addClass('active');
        $("#productlistitem").addClass('active');
    });</script>

}