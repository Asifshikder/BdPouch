@model Banner
@{
    ViewData["Title"] = "Index";
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Home/Index">Home</a></li>
                <li class="breadcrumb-item active">Banner contents</li>
            </ol>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="d-flex w-100">
                    <div class="">
                        <span class="card-title"> <i class="fas fa-list"></i> Banner contents</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model != null)
                    {
                        <div class="text-right mb-2"><a class="btn btn-update" href="/Admin/HomeBanner/CreateOrEdit?id=@Model.Id">Update</a></div>
                        <table class="table table-hovered table-sm table-striped table-bordered">
                            <thead class="secondary">
                                <tr>
                                    <th>Name </th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Title</th>
                                    <th>@Model.Title</th>
                                </tr>
                                <tr>
                                    <th>Short Description</th>
                                    <th>@Model.Description</th>
                                </tr>
                                
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center"><a class="btn btn-create" href="/Admin/HomeBanner/CreateOrEdit">Configure</a></div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#cmstree").addClass('menu-open');
            $("#bannerNav").addClass('active');
        });
    </script>

}
