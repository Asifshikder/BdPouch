@model ProductViewModel
@{
    ViewData["Title"] = "Update";
}
<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Home/Index">Home</a></li>
                <li class="breadcrumb-item"><a href="/Admin/Product/Index">Product</a></li>
                <li class="breadcrumb-item active">UPdate</li>
            </ol>
            <div>
                <a asp-action="Index" class="btn btn-sm btn-theme"><i class="fa fa-arrow-left"></i>Back to List</a>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="d-flex w-100">
                    <div class="">
                        <span class="card-title"> <i class="fas fa-list"></i> Update Product</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control form-theme" required />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Category" class="control-label"></label>
                                <input asp-for="Category" class="form-control form-theme" required></input>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="ProductImageFile" class="control-label"></label>
                                <input asp-for="ProductImageFile" class="form-control form-theme dropify" data-default-file="@Url.Content(Model.ProductImage)" />
                                <span asp-validation-for="ProductImageFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ShortDescription" class="control-label"></label>
                                <textarea asp-for="ShortDescription" class="form-control form-theme" required></textarea>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EAN_13" class="control-label"></label>
                                <input asp-for="EAN_13" class="form-control form-theme" required />
                                <span asp-validation-for="EAN_13" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Company" class="control-label"></label>
                                <select required asp-for="CompanyId"  asp-items="ViewBag.companylist" class="form-control form-theme">
                                    <option>Select company</option>
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CountryOfOrigin" class="control-label"></label>
                                <input asp-for="CountryOfOrigin" class="form-control form-theme" required />
                                <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UnitPrice" class="control-label"></label>
                                <input asp-for="UnitPrice" class="form-control form-theme" required type="number" />
                                <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Weight_SKU" class="control-label"></label>
                                <input asp-for="Weight_SKU" class="form-control form-theme" required />
                                <span asp-validation-for="Weight_SKU" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Feature" class="control-label"></label>
                                <textarea asp-for="Feature" class="form-control form-theme" ></textarea>
                                <span asp-validation-for="Feature" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Packaging" class="control-label"></label>
                                <textarea asp-for="Packaging" class="form-control form-theme" ></textarea>
                                <span asp-validation-for="Packaging" class="text-danger"></span>
                            </div>
                            <input asp-for="Id" hidden/>
                            <input asp-for="ProductImage" hidden/>
                            <div class="form-group float-right">
                                <a asp-action="Index" class="btn btn-sm btn-cancel">Cancel</a>
                                <input type="submit" value="Update" class="btn btn-sm btn-update" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
        $("#Catalogtreeview").addClass('menu-open');
        $("#productnav").addClass('active');
    });
    </script>
}