@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}
<style>
    .heading-container {
        min-height: 250px;
    }
</style>
<div class="banner-arightt-center heading-container">

    <div class="mt-5">
        <h1 class="display-4 color-theme">Optimization Support</h1>

        <div>
            <img src="~/assets/images/barcode_banner-1536x322.jpg" height="80" />
        </div>
    </div>
</div>

<div class="display-catalog">
    <div class=" mt-4">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-3 p-2">
                    <a class="company-link " asp-action="Details" asp-route-id="@item.Id">
                        <div class="bg-white company-card rounded row p-2">
                            <div class="col-3">
                                <img class="mt-3" src="@Url.Content(item.CompanyLogo)" height="50" />
                            </div>
                            <div class="col-9 text-left">
                                <h5 class="">
                                    @item.CompanyName
                                </h5>
                                <span class="tb-iconbox-label tb-color1">@item.CompanyBrandName</span>

                            </div>
                        </div>
                    </a>
                </div>

            }

        </div>
    </div>
</div>
